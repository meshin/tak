<% title "Items" %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Link</th>
    <th>Ad</th>
  </tr>
  <% for item in @items %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.content %></td>
      <td><%= item.link %></td>
      <td><%= item.ad_id %></td>
      <td><%= link_to "Show", item %></td>
      <td><%= link_to "Edit", edit_item_path(item) %></td>
      <td><%= link_to "Destroy", item, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Item", new_item_path %></p>
