<% title "Image" %>

<p>
  <strong>Position:</strong>
  <%= @image.position %>
</p>
<p>
  <strong>File:</strong>
  <%= @image.file.url %><br />
  <%= image_tag @image.file.crop_source.crop.url %>
</p>
<p>
  <strong>Ad:</strong>
  <%= @image.ad_id %>
</p>

<p>
  <%= link_to "Edit", edit_image_path(@image) %> |
  <%= link_to "Destroy", @image, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", images_path %>
</p>
