<%- model_class = @ad.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @ad.name %></dd>

</dl>

<%= render :partial => 'ad_code'%>

<div class="form-actions">
  <%= link_to t('.edit photo', :default => t("helpers.links.edit header photo")),
              edit_image_path(@ad.images.first), :class => 'btn'  %><br />


  <% @ad.items.each_with_index do |item| %>

    <%= link_to t('.edit', :default => t("helpers.links.edit ad image")),
              "/items/#{item.id}/crop", :class => 'btn' %><br />

  <% end %>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ads_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ad_path(@ad), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ad_path(@ad),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
